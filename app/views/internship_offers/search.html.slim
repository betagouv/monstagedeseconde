.modal.show.modal-fullscreen-lg [aria-modal="true"
                                 role="dialog"
                                 style="display: block"]
  .modal-dialog
    .modal-content
      .modal-header.bb-1.bt-light.border-bottom
        .modal-title.col.text-center Modifier ma recherche

        = link_to internship_offers_path(forwardable_params),
                  class: "close-absolute close",
                  data: {dismiss: "modal"},
                  aria: { label: "Close" } do
          span aria-hidden="true" &times;


      .modal-body.mt-3.fr-px-2w
        = react_component("SearchBar",
                            props: { searchParams: @params,
                                    preselectedWeeksList: @preselected_weeks_list_array,
                                    schoolWeeksList: @school_weeks_list_array,
                                    secondeWeekIds: @seconde_week_ids,
                                    troisiemeWeekIds: @troisieme_week_ids,
                                    studentGradeId: @student_grade_id,
                                    sectors: @sectors,
                                    origin: "search"})
